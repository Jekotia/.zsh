#! /bin/bash
### https://github.com/bhilburn/powerlevel9k
if [[ -e ~/.zsh/extras/powerlevel9k/powerlevel9k.zsh-theme ]] ; then
	source ~/.zsh/extras/powerlevel9k/powerlevel9k.zsh-theme
	POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(context dir rbenv vcs)
	POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status root_indicator ip disk_usage load ram)

    if hostname | grep hyperion > /dev/null \
    || hostname | grep mars > /dev/null ; then
        POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=($POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS battery)
    fi

	POWERLEVEL9K_PROMPT_ON_NEWLINE=true
	#POWERLEVEL9K_RPROMPT_ON_NEWLINE=true
	POWERLEVEL9K_MULTILINE_FIRST_PROMPT_PREFIX="â†±"
	POWERLEVEL9K_MULTILINE_LAST_PROMPT_PREFIX="â†³ "
	#POWERLEVEL9K_COLOR_SCHEME='light'
	POWERLEVEL9K_DISK_USAGE_BACKGROUND='blue'
fi

if [[ -e /var/www/html/owncloud/occ ]] ; then
	alias occ="sudo -uapache /var/www/html/owncloud/occ"
fi
alias apt-search="dpkg-query -L"
alias composer="sudo -uapache composer"

if [ -e /etc/motd ] ; then
	cat /etc/motd
fi

#-> https://stackoverflow.com/a/18915067
SSH_ENV="$HOME/.ssh/environment"

function start_agent {
    echo "Initialising new SSH agent..."
    /usr/bin/ssh-agent | sed 's/^echo/#echo/' > "${SSH_ENV}"
    echo succeeded
    chmod 600 "${SSH_ENV}"
    . "${SSH_ENV}" > /dev/null
    /usr/bin/ssh-add;
}

# Source SSH settings, if applicable

if [ -f "${SSH_ENV}" ]; then
    . "${SSH_ENV}" > /dev/null
    #ps ${SSH_AGENT_PID} doesn't work under cywgin
    ps -ef | grep ${SSH_AGENT_PID} | grep ssh-agent$ > /dev/null || {
        start_agent;
    }
else
    start_agent;
fi
